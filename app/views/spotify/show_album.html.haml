%p
= @album.name
%br/
= @album.year
%br/
- if @album.image
  = image_tag @album.image, width: 100

%p
- @album.tracks.each do |track|
  %p
  = track.name
  %br/
  #{track.duration}s
  #{track.tempo}bpm
  #{track.time}/4
  %br/
  #{track.key} #{track.mode.titleize}
  - if track.acoustic
    acoustic
